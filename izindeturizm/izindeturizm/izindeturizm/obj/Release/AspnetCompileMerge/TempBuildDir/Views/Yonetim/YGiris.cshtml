
@{
    ViewBag.Title = "YGiris";
    Layout = "~/Views/Yonetim.cshtml";
}


<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">Log in</div>
            <div class="panel-body">
                @using (Html.BeginForm("YGiris", "Yonetim", FormMethod.Post))
                {
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="Kullanıcı adı" name="kullaniciadi" type="text" autofocus="">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Şifre" name="sifre" type="password" value="">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="submit" value="Gönder"/>
                            </label>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div><!-- /.col-->
</div><!-- /.row -->
@{Html.RenderAction("YMesaj");}