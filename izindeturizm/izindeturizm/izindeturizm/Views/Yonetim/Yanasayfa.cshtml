    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default chat">
                <div class="panel-heading" id="accordion"><svg class="glyph stroked two-messages"><use xlink:href="#stroked-two-messages"></use></svg>Sizinle İletişime Geçenler</div>
                <div class="panel-body">
                    <ul>
                        @foreach (Iletisim item in (List<Iletisim>)ViewData["iletisim"])
                        {
                            <li class="left clearfix tekmesaj" style="cursor:pointer;" id="mesaj_id_@item.id" onclick="id_ver('@item.id','@item.email.Trim()');">
                                <span class="chat-img pull-left">
                                    <!--resim alanı-->
                                </span>
                                <div class="chat-body clearfix">
                                    <div class="header">
                                        <strong class="primary-font">@item.adisoyadi</strong> <small class="text-muted">@item.tarih</small>
                                    </div>
                                    <p>
                                       @item.mesaj;
                                        <br />
                                        Eposta: @item.email - Tel: @item.tel
                                    </p>
                                    <div style="float:right;">
                                        @using (Html.BeginForm("YMesaj_Goruldu", "Yonetim", FormMethod.Post))
                                        {
                                            <input type="hidden" value="@item.id" name="iletisim_id" />
                                            <input type="submit" value="Görüldü" class="btn btn-success btn-md" />
                                        }
                                        
                                    </div>
                                </div>
                            </li>
                        }
                        
                    </ul>
                </div>
                <script>
                    function id_ver(id, mail_adresi) {
                        document.getElementById("mail_adresi").value = mail_adresi;
                        $(".tekmesaj").css({"backgroundColor":"white"});
                        document.getElementById("mesaj_id_" + id).style.backgroundColor = "rgb(193, 193, 193)";
                    }
                </script>
                <div class="panel-footer">
                    @using (Html.BeginForm("YMesaj_Gonder", "Yonetim", FormMethod.Post))
                    {
                        <div class="input-group">
                            <input type="hidden" id="mail_adresi" name="kime" />
                            <textarea id="btn-input" rows="5" name="mesaj" class="form-control input-md" placeholder="Cevapıbız Nedir?">

                            </textarea>
                            <input id="btn-input" type="password" name="emailsifresi" class="form-control input-md" placeholder="Yonetici mail sifresi" />
                            <span class="input-group-btn">
                                <input type="submit" class="btn btn-success btn-md" id="btn-chat" value="Gönder">
                            </span>
                        </div>
                    }
                </div>
            </div>

